generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  username   String
  password   String
  provider   String       @default("local")
  confirmed  Boolean      @default(true)
  blocked    Boolean      @default(false)
  fac        String
  rpNumber   String
  nameRP     String
  encomendas Encomendas[]
  createdAt  DateTime     @default(now())
  lastLogin  DateTime?
}

model Encomendas {
  id           String   @id @default(uuid())
  createdBy    String
  name         String? //Posso ter o nome que o admin registrou a venda no nome do cliente
  fac          String? //Posso ter a fac√ßao que o admin registrou a venda no nome do cliente
  contactPhone String
  item         String
  quantity     Int
  createdAt    DateTime @default(now())
  userId       String
  author       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
